@model RentalSystem.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<script>
    function validateForm() {
        var checkBox = document.getElementById("form2Example3cg");
        if (!checkBox.checked) {
            alert("Please agree to the terms of service.");
            return false;
        }
        return true;
    }
</script>
<html>
    <head>
        <title>Register</title>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - RentalSystem</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/RentalSystem.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand p-3" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" width="150px" height="25px"></a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarRightAlignExample"
                        aria-controls="navbarNavAltMarkup"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
        </nav>
    </header>

        <section class="h-100 h-custom">
            <div class="container py-3 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-8 col-xl-6">
                        <div class="card rounded-3">
                            <img src="~/images/carousel3.jpg"
                                 class="w-100 h-25" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                                 alt="Sample photo">
                            <div class="card-body p-3 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-3 px-md-2">Registration Info</h3>

                                <form class="px-md-2" asp-action="Create" onsubmit="return validateForm()">

                                    <div class="form-outline mb-2">
                                        <label asp-for="NIC" class="form-label" for="form3Example1q">NIC</label>
                                        <input asp-for="NIC" type="text" id="form3Example1q" class="form-control" />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-2 pb-2">
                                            <div class="form-outline mb-2">
                                                <label asp-for="Firstname" class="form-label" for="form3Example1cg">First Name</label>
                                                <input asp-for="Firstname" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                                <span asp-validation-for="Firstname" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-2 pb-2">
                                            <div class="form-outline mb-2">
                                                <label asp-for="Lastname" class="form-label" for="form3Example1cg">Last Name</label>
                                                <input asp-for="Lastname" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                                <span asp-validation-for="Lastname" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-outline mb-2">
                                        <label asp-for="Username" class="form-label" for="form3Example1cg">Username</label>
                                        <input asp-for="Username" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-2">
                                        <label asp-for="Email" class="form-label" for="form3Example1cg">Email</label>
                                        <input asp-for="Email" type="email" id="form3Example1cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-2">
                                        <label asp-for="Password" class="form-label" for="form3Example4cg">Password</label>
                                        <input type="password" asp-for="Password" id="form3Example4cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-2">
                                        <label asp-for="Address" class="form-label" for="form3Example3cg">Address</label>
                                        <input asp-for="Address" type="text" id="form3Example3cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-2">
                                        <label asp-for="ContactNo" class="form-label" for="form3Example3cg">Contact No</label>
                                        <input asp-for="ContactNo" type="text" id="form3Example3cg" class="form-control form-control-lg" />
                                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                                    </div>
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                        <label class="form-check-label" for="form2Example3g">
                                            I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                        </label>
                                    </div>

                                    <button type="submit" class="btn btn-success btn-lg mb-1 center">Submit</button>

                                    <p class="text-center text-muted mt-4 mb-0">
                                        Have already an account? <a asp-controller="Account" asp-action="Login"
                                                                    class="fw-bold text-body"><u>Login here</u></a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>